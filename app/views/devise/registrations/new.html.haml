#form
  %h2 Sign Up

  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = f.error_notification

    = f.input :name, required: true, autofocus: true, input_html: { class: 'input_field' }
    = f.input :email, required: true, input_html: { class: 'input_field' }
    = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), input_html: { class: 'input_field' }
    = f.input :password_confirmation, required: true, input_html: { class: 'input_field' }

    = f.button :submit, "Sign up", class: "button"

  = render "devise/shared/links"